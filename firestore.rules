
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any authenticated user to read and write to user profiles.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Allow any authenticated user to read and write to devices.
    match /devices/{deviceId} {
      allow read, write: if request.auth != null;
    }
  }
}
