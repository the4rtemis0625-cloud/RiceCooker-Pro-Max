
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read, create and update their own profile.
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }

    // A user can read/write to a device document if their user profile's deviceId matches.
    match /devices/{deviceId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.deviceId == deviceId;
    }
  }
}
