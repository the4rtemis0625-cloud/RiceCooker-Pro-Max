
{
  "entities": {
    "device": {
      "title": "Rice Cooker Device",
      "description": "Represents a single rice cooker device and its state.",
      "type": "object",
      "properties": {
        "command": {
          "type": "object",
          "description": "Object to hold command flags for the device.",
          "properties": {
            "dispense": {
              "type": "boolean",
              "description": "Set to true to start the dispense and wash cycle."
            },
            "cook": {
              "type": "boolean",
              "description": "Set to true to start the cooking cycle."
            },
            "cancel": {
              "type": "boolean",
              "description": "Set to true to cancel any ongoing operation."
            }
          }
        },
        "currentAction": {
          "type": "string",
          "description": "The specific action the device is currently performing.",
          "enum": ["idle", "dispense rice", "add water", "cook"]
        },
        "settings": {
          "type": "object",
          "description": "Configurable settings for the device.",
          "properties": {
            "dispenseDuration": {
              "type": "number",
              "description": "Duration for dispensing rice in seconds."
            },
            "washDuration": {
              "type": "number",
              "description": "Duration for washing rice in seconds."
            },
            "cookDuration": {
              "type": "number",
              "description": "Duration for cooking rice in seconds."
            }
          },
          "required": ["dispenseDuration", "washDuration", "cookDuration"]
        },
        "lastUpdated": {
            "type": "object",
            "properties": {
                ".sv": {
                    "type": "string",
                    "enum": ["timestamp"]
                }
            }
        },
        "currentStage": {
            "type": "object",
            "description": "Details about the current running stage.",
            "properties": {
                "name": {
                    "type": "string",
                    "enum": ["DISPENSING", "WASHING", "COOKING"]
                },
                "startTime": {
                    "type": "object",
                    "properties": {
                        ".sv": {
                            "type": "string",
                            "enum": ["timestamp"]
                        }
                    }
                },
                "duration": {
                    "type": "number"
                }
            }
        },
        "queue": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
      },
      "required": ["currentAction", "settings", "lastUpdated"]
    },
    "UserProfile": {
        "title": "User Profile",
        "description": "Stores user-specific information.",
        "type": "object",
        "properties": {
            "email": {
                "type": "string",
                "format": "email",
                "description": "The user's email address."
            },
            "deviceId": {
                "type": "string",
                "description": "The ID of the rice cooker device associated with this user."
            },
            "createdAt": {
                "type": "object",
                "properties": {
                    ".sv": {
                        "type": "string",
                        "enum": ["timestamp"]
                    }
                }
            }
        },
        "required": ["email", "createdAt"]
    }
  },
  "auth": {
    "providers": ["email"]
  }
}
